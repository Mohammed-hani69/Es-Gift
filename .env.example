# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///instance/es_gift.db

# Email Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Email Configuration (Custom SMTP)
# MAIL_SERVER=your-smtp-server.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@yourdomain.com
# MAIL_PASSWORD=your-password
# MAIL_DEFAULT_SENDER=your-email@yourdomain.com

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Security Configuration
WTF_CSRF_TIME_LIMIT=3600

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URIS=http://localhost:5000/auth/google/callback,http://127.0.0.1:5000/auth/google/callback

# OneCard API Configuration
ONECARD_API_URL=https://OneCard.com/api/
ONECARD_USERNAME=your-onecard-username
ONECARD_PASSWORD=your-onecard-password
ONECARD_SELLER_CODE=your-seller-code

# WhatsApp Support Numbers
WHATSAPP_SUPPORT=+201145425207

# Admin Configuration
ADMIN_EMAIL=admin@es-gift.com
ADMIN_PASSWORD=admin123

# Currency Exchange API (optional)
EXCHANGE_API_KEY=your-exchange-api-key
